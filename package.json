{
  "name": "capacitor-video-player",
  "version": "6.0.0",
  "description": "custom Native Capacitor plugin to play a video",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorVideoPlayer.podspec"
  ],
  "author": "Jean Pierre QuÃ©au",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/didierdelhaye-neopixl/capacitor-video-player"
  },
  "bugs": {
    "url": "https://github.com/didierdelhaye-neopixl/capacitor-video-player/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api CapacitorVideoPlayerPlugin  --output-readme docs/API.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "test": "echo \"No test specified\"",
    "prepublishOnly": "npm run build && npm run docgen"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^6.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.14.2",
    "eslint": "^9.5.0",
    "hls.js": "^1.5.11",
    "prettier": "~3.3.2",
    "prettier-plugin-java": "~2.6.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "swiftlint": "^1.0.2",
    "typescript": "~5.4.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.1.0",
    "hls.js": "^1.5.11"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "type": "module"
}
